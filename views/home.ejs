<!-- File: views/home.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <!-- Bootstrap 5 CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="text-center my-5"><%= title %></h1>

    <div class="mb-4">
      <a href="/add-record" class="btn btn-primary">Add Record</a>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Time In</th>
          <th>Time Out</th>
          <th>Hours</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach((record) => { %>
          <tr>
            <td><%= record.name %></td>
            <td><%= record.date.toDateString() %></td>
            <td><%= record.timeIn %></td>
            <td><%= record.timeOut %></td>
            <td><%= record.hours.toFixed(2) %></td>
            <td>
              <a href="/edit-record/<%= record._id %>" class="btn btn-primary btn-sm me-2">Edit</a>
              <form method="post" action="/delete-record/<%= record._id %>" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
